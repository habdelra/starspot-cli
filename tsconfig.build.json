{
  "compilerOptions": {
    // Enhance strictness
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Module configuration
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,

    // Input/output paths
    "rootDir": "src",
    "outDir": "dist"
  },

  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ]
}